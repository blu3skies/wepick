<!DOCTYPE html>
<html>
  <head>
    <title>Wepick</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

<body>
  <header class="navbar  navbar-inverse">
    <div class="navbar-class">
      <div class="container">

      <!-- Collect the nav links, forms, and other content for toggling -->

        <ul class="nav navbar-nav">
          <div class="nav-bar nav">
            <img src="/images/wepicklogo.png" width="200" alt="We Pick">

          <% if user_signed_in? %>
            <% if request.env['PATH_INFO'].include?('games') %> 
              <%= link_to "Quit Game", games_rematch_path(:user_id => current_user.id), method: :delete, class: "nav-item nav-link" %>
            <% end %>

            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-item nav-link"%>
          <% else %>
            <%= render "devise/shared/links" %>
          <% end %>
          </div>
        </ul>
      </div>
    </div>
  </header>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
</body>


</html>
