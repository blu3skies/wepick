<!DOCTYPE html>
<html>
  <head>
    <title>Wepick</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="navbar  navbar-inverse">
    <div class="navbar-class">
      <div class="container">


      <!-- Collect the nav links, forms, and other content for toggling -->

        <ul class="nav navbar-nav">
          <div class="nav-bar nav"> 
          <% if user_signed_in? %>
            <% if current_page?(:root)%>
              <%= link_to "Add Friend", "/friendships", class: "nav-item nav-link" %>
            <% end %>

            <% if current_page?(:controller => 'games', :action => 'index')%>
              <%= link_to "Quit Game", games_rematch_path(:user_id => current_user.id), method: :delete, class: "nav-item nav-link" %>
            <% end %>

            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-item nav-link"%>
          <% else %>
            <%= render "devise/shared/links" %>
          <% end %>
      </div>
        </ul>


      </div>
    </div>
  </header>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>


</html>
